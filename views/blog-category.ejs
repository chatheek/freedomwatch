  <style>
    /* Additional styles */

    

    
    .blog-post {
        background-color: white;
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        transition: transform 0.3s ease-in-out;
    }
    .blog-post:hover {
        transform: translateY(-5px);
    }
    .blog-post img {
        width: 100%;
        height: auto;
        object-fit: cover;
        max-height: 150px;
    }
    .blog-post-content {
        padding: 15px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }
    .blog-post h2 {
        font-size: 1.2rem;
        margin-bottom: 10px;
    }
    .blog-post p {
        font-size: 0.9rem;
        color: #666;
        line-height: 1.6;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
    .read-more {
        margin-top: 10px;
        text-decoration: none;
        color: white;
        background: linear-gradient(45deg, #f519af, #be3ff0);
        border: none;
        padding: 10px 15px;
        border-radius: 5px;
        text-align: center;
        display: inline-block;
    }

    .read-more:hover {
        background: linear-gradient(45deg, #007bff, #3fceed);
        color: white;
    }
    

</style>
</head>

<body>
    <header id="header" class="header d-flex align-items-center sticky-top">
        <div class="container position-relative d-flex align-items-center justify-content-between">
    
          <a href="/" class="logo d-flex align-items-center me-auto me-xl-0">
            <!-- Uncomment the line below if you also wish to use an image logo -->
            <!-- <img src="assets/img/logo.png" alt=""> -->
            <h1 class="sitename">Freedom Watch</h1>
            <span>.</span>
          </a>
    
          <nav id="navmenu" class="navmenu">
            <ul>
              <li><a href="/" class="active">Home<br></a></li>
              
              
              <li class="dropdown"><a href=""><span>Blog</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
                <ul>
                  
                  <li><a href="/blog/general">General</a></li>
                  <li><a href="/blog/women">Women</a></li>
                  <li><a href="/blog/children">Children</a></li>
                  <li><a href="/blog/lgbtqia">LGBTQIA+</a></li>
                </ul>
              </li>
              <li><a href="/about">About</a></li>
              <li><a href="/engage">Engage</a></li>
            </ul>
            <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
          </nav>
    
          
    
        </div>
      </header>


    <div class="container">
        <h1 class="my-4 text-center"><%= category %> Blog</h1>
        <div class="row">
            <% posts.forEach(post => { %>
                <div class="col-md-4 mb-4">
                    <div class="blog-post card h-100">
                        <img src="<%= post.imageUrl %>" alt="<%= post.heading %>" class="card-img-top">
                        <div class="blog-post-content card-body">
                            <h2 class="card-title"><%= post.heading.substring(0, 25) %></h2>
                            <p class="card-text"><%- post.content.substring(0, 25) %>...</p>
                            <a href="/blog/post/<%= post._id %>" class="read-more btn btn-primary">Read More</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
